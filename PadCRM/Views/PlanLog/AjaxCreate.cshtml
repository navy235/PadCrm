@{
    Layout = null;
}
@using (Ajax.BeginForm("ajaxCreate", "planlog", new AjaxOptions()
{
    OnSuccess = "ajaxFormSuccess",
    OnFailure = "ajaxFormFailure"

}, new { formtitle = "添加计划日志" }))
{
    @Html.AntiForgeryToken()
    @Html.EditorForModel()
