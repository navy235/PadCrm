<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <!--[if IE 7]>
      <link rel="stylesheet" href="netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome-ie7.min.css">
    <![endif]-->
    @Styles.Render("~/Content/kendo/2013.1.319/css")
    @Styles.Render("~/Content/form")
    @Styles.Render("~/Content/admin")
    @Styles.Render("~/Content/css/bootstrap")
    @Styles.Render("~/Content/display")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/kendo/2012.3.1114/jquery.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/kendo/2012.3.1114/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2012.3.1114/kendo.aspnetmvc.min.js"></script>
    <script src="~/Scripts/kendo/2012.3.1114/cultures/kendo.culture.zh-CHS.min.js"></script>
    @Scripts.Render("~/bundles/jquerycontrol")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/base")
    <script type="text/javascript">
        kendo.culture("zh-CHS");
        var ajaxUrl = {
            permissionUrl: '@Url.Action("permission", "ajaxService")'
        }
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("index", "welcome")">平衡点CRM</a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav permission-nav">
                <!--所有人都有的权限start-->
                <li class="dropdown ">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">基本功能 <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("create", "customercompany")">添加客户</a></li>
                        <li><a href="@Url.Action("index", "customercompany")">客户信息</a></li>
                        <li><a href="@Url.Action("index", "task")">任务安排</a></li>
                        <li><a href="@Url.Action("index", "contactrequire")">我的合同</a></li>
                        <li><a href="@Url.Action("my", "mediarequire")">媒介策略请求</a></li>
                        <li><a href="@Url.Action("my", "fileshare")">文件共享</a></li>
                        <li><a href="@Url.Action("birthday", "message")">生日提醒</a></li>
                        <li><a href="@Url.Action("mypunish", "message")">绩效分数</a></li>
                    </ul>
                </li>
                <!--所有人都有的权限end-->
            </ul>

            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-cog"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("index", "changepwd")">修改密码</a></li>
                        <li><a href="@Url.Action("logout", "login")">退出登录</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="main">
        <div class="page-header">
            <h4>@ViewBag.Title</h4>
        </div>
        @RenderBody()
    </div>

    @Html.Partial("_DisplayMessage")
    @RenderSection("scripts", required: false)
</body>
</html>
