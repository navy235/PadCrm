@model List<CustomerCompany>

<div class="table-responsive">
    <table class="table  table-hover">
        <thead>
            <tr>
                <th style="width: 60px">客户ID</th>
                <th style="width: 150px;">公司名称</th>
                <th style="width: 80px;">品牌名称</th>
                <th style="width: 120px;">城市</th>
                <th style="width: 110px;">客户分类</th>
                <th style="width: 110px;">传真</th>
                <th style="width: 110px;">电话</th>
                <th style="width: 150px;">地址</th>
                <th style="width: 80px;">录入者</th>
                <th style="width: 90px;">录入时间</th>
                <th style="width: 210px;">操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="customercolor@(item.CustomerCateID)">
                    <td>
                        @item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.BrandName</td>
                    <td>
                        <div data-showcontent="@Url.Action("CityName", "ajaxService", new { value = item.CityValue })"></div>
                    </td>
                    <td>@item.CustomerCate.CateName</td>
                    <td>@item.Fax</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                    <td>@item.AddMember.NickName</td>
                    <td>@item.AddTime.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a class="btn btn-primary" href="@Url.Action("details", new { ID = item.ID })">查看</a>
                        <a class="btn btn-primary btn-delete-single" data-id="@item.ID" data-cssclass="planlog" href="javascript:void(0);">删除</a>
                        <a class="btn btn-primary btn-edit-single" data-id="@item.ID" data-cssclass="planlog" href="javascript:void(0);">编辑</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="page-info">
    @Html.MaitonnPage((PagingInfo)ViewBag.PageInfo, "search")
</div>
